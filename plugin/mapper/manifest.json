{
  "manifest_version": 2,
  "name": "Shopelia Mapper",
  "version": "0.11.1",
  "description": "Permet de récupérer le XPath d'éléments d'un site.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Active Shopelia Mapper",
    "default_icon": "images/prixing24.png"
  },
  "content_scripts": [{
      "matches": ["*://*/*"],
      "js": ["jquery-1.9.1.min.js", "jquery-ui-1.10.2.min.js", "add_shopelia.js"]
  }],
  "background": {"scripts": ["background.js"]},
  "web_accessible_resources": ["shopelia_mapper.html", "add_shopelia.css"],
  "permissions": ["tabs", "https://dev.prixing.fr:3014/*", "http://*/", "https://*/"]
}