{
  "manifest_version": 2,
  "name": "Shopelia Mapper",
  "version": "0.35.2",
  "description": "Permet de récupérer le XPath d'éléments d'un site.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Active Shopelia Mapper",
    "default_icon": "images/prixing24.png"
  },
  "content_scripts": [{
      "matches": ["*://*/*"],
      "js": ["jquery-1.9.1.min.js", "jquery-ui-1.10.2.min.js", "lib/underscore-min.js", "lib/html_utils.js", "lib/xpath_utils.js", "content_script.js"]
  }],
  "background": {"scripts": ["background.js"]},
  "web_accessible_resources": ["view/shopelia_mapper2.html", "content_script.css"],
  "permissions": ["tabs", "http://localhost:3000/*"]
}
